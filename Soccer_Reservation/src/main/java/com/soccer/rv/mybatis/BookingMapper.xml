<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="booking">

	<insert id="insert" parameterType="bookingDto">
		INSERT INTO reservation_form VALUES(reservation_form_seq.NEXTVAL, #{rAddr}, #{rTime}, #{phone01}, #{phone02},
		#{addr1}, #{addr2}, #{addr3}, #{userNumber}, #{orgName}, #{etc})
	</insert>
	
	<select id="getData" parameterType="string" resultType="bookingDto">
		select rUser,rAddr,rTime,phone01,phone02,addr1,addr2,addr3,userNumber,orgName,etc
		from reservation_form 
		where rUser=#{rUser}
	</select>
	
	<select id="getList" resultType="bookingDto">
		SELECT rUser,rAddr,rTime,phone01,phone02,addr1,addr2,addr3,userNumber,orgName,etc
		FROM reservation_form 
		ORDER BY rUser ASC
	</select>
	
	<delete id="delete" parameterType="int">
		DELETE FROM reservation_form
		WHERE rUser=#{rUser}
	</delete>
	
	<update id="update" parameterType="int">
		UPDATE reservation_form
		SET phone01=#{phone01}, phone02=#{phone02},
		addr1=#{addr1}, addr2=#{addr2}, addr3=#{addr3}, userNumber=#{userNumber}, orgName=#{orgName}, etc=#{etc}
		WHERE rUser=#{rUser}
	</update>
</mapper>